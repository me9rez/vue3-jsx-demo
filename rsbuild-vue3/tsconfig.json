{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@conponents/*": ["../bunchee-vue-jsx/src/*"]
    }
  },
  "include": [
    "src",
    "../bunchee-vue-jsx/src/**/*.ts",
    "../bunchee-vue-jsx/src/**/*.tsx"
  ]
}
